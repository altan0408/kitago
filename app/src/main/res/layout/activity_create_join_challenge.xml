<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_cave"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- BACK BUTTON -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_media_previous"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CONTRACT SCROLL PANEL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_panel"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvChallengeTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/challenge_type"
            android:textColor="@color/text_muted"
            android:textSize="10sp"
            android:labelFor="@+id/etChallengeType"
            tools:ignore="SmallSp" />

        <EditText
            android:id="@+id/etChallengeType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/press_start_2p"
            android:hint="@string/challenge_hint"
            android:padding="12dp"
            android:textSize="10sp"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tvDurationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/duration"
            android:textColor="@color/text_muted"
            android:textSize="10sp"
            android:labelFor="@+id/spDuration"
            tools:ignore="SmallSp" />

        <Spinner
            android:id="@+id/spDuration"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:contentDescription="@string/duration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/invite_friends"
            android:textColor="@color/text_muted"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:id="@+id/btnSelectFriends"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_send"
                android:contentDescription="@null" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/press_start_2p"
                android:text="@string/select_friends"
                android:textColor="@color/text_muted"
                android:textSize="8sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

    </LinearLayout>

    <!-- CREATE BUTTON (Wax Seal) -->
    <TextView
        android:id="@+id/btnCreate"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_button_orange"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/create"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
