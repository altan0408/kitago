<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_cave"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- TOP BAR: AVATAR + XP -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:padding="4dp"
            android:background="@drawable/bg_button_gold"
            android:contentDescription="@string/user_avatar_description" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADVENTURER"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/press_start_2p"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                tools:ignore="SmallSp" />

            <ProgressBar
                android:id="@+id/xpProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="65"
                android:progressDrawable="@drawable/bg_xp_bar"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- TREASURE CHEST BALANCE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_panel"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo_kitago_main"
                    android:contentDescription="@null"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_balance"
                    android:textSize="10sp"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="#333333"
                    android:layout_marginTop="12dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±0.00"
                    android:textSize="24sp"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- BUDGET HP SECTION -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/budget_hp"
                android:textSize="12sp"
                android:fontFamily="@font/press_start_2p"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                tools:ignore="SmallSp" />

            <ProgressBar
                android:id="@+id/budgetHpBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:progress="100"
                android:progressDrawable="@drawable/bg_hp_bar"
                android:layout_marginBottom="28dp" />

            <!-- ACTIVE QUESTS PREVIEW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active_quests_header"
                        android:textSize="12sp"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/white"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tvViewAllGoals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/view_all"
                        android:textSize="8sp"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/gold_light"
                        tools:ignore="SmallSp"
                        android:clickable="true"
                        android:focusable="true" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/goalPreviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_panel"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/tvPreviewGoalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO ACTIVE QUESTS"
                        android:textSize="10sp"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="@color/text_dark"
                        tools:ignore="SmallSp" />
                    <ProgressBar
                        android:id="@+id/previewGoalProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/bg_xp_bar"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- CHALLENGE PREVIEW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/live_challenges_header"
                    android:textSize="12sp"
                    android:fontFamily="@font/press_start_2p"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="1"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/challengePreviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stone_tablet"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/btn_star_big_on"
                        android:contentDescription="@null" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="NO LIVE CHALLENGES"
                        android:textSize="10sp"
                        android:fontFamily="@font/press_start_2p"
                        android:textColor="#000000"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_button_gold"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_view"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/home"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navGoals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_compass"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/goals"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_input_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/add"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navChallenges"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star_big_on"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/challenges"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/profile"
            app:tint="#000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
