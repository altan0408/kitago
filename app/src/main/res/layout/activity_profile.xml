<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_cave"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- TOP SECTION: AVATAR + LEVEL -->
    <LinearLayout
        android:id="@+id/avatarSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLargeAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:padding="6dp"
            android:background="@drawable/bg_button_gold"
            android:contentDescription="@string/user_large_avatar" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/level_placeholder"
            android:textColor="@color/gold_dark"
            android:textSize="16sp"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1" />

        <ProgressBar
            android:id="@+id/profileXpBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:progress="70"
            android:progressDrawable="@drawable/bg_xp_bar" />
    </LinearLayout>

    <!-- CONTENT SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/avatarSection"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- BADGE ROOM -->
            <LinearLayout
                android:id="@+id/badgeRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_panel"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/badge_room"
                    android:textColor="@color/text_dark"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/btn_star_big_on"
                        android:layout_margin="6dp"
                        android:contentDescription="@string/earned_badge" />
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:alpha="0.3"
                        android:layout_margin="6dp"
                        android:contentDescription="@string/locked_badge" />
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:alpha="0.3"
                        android:layout_margin="6dp"
                        android:contentDescription="@string/locked_badge" />
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:alpha="0.3"
                        android:layout_margin="6dp"
                        android:contentDescription="@string/locked_badge" />
                </GridLayout>
            </LinearLayout>

            <!-- MULTIPLAYER STATS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_stone_tablet"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/multiplayer_stats"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/wins_placeholder"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/streak_placeholder"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_button_gold"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_view"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/home"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navGoals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_compass"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/goals"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_input_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/add"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navChallenges"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star_big_on"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/challenges"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/profile"
            app:tint="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
