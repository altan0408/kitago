<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background (decorative) -->
    <ImageView
        android:id="@+id/bgMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_cave"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logo (decorative) -->
    <ImageView
        android:id="@+id/logoMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_kitago_main"
        android:adjustViewBounds="true"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button container -->
    <LinearLayout
        android:id="@+id/menuButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/logoMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnStart"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:src="@drawable/btn_start"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="@string/start"/>

        <ImageButton
            android:id="@+id/btnChallenges"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/btn_challenges"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="@string/challenges"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/btn_settings"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="@string/settings"/>

        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/btn_exit"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="@string/exit"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
