<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_cave"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_media_previous"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_panel"
        android:padding="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_kitago_main"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textColor="@color/subtitle"
            android:textSize="12sp"
            android:fontFamily="@font/press_start_2p"
            android:layout_marginBottom="24dp" />

        <!-- USERNAME -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:padding="8dp"
            android:textSize="10sp"
            android:textColor="@color/text_dark"
            android:fontFamily="@font/press_start_2p"
            android:layout_marginBottom="12dp"
            android:hint="@string/username"
            android:inputType="text" />

        <!-- EMAIL -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:padding="8dp"
            android:textSize="10sp"
            android:textColor="@color/text_dark"
            android:fontFamily="@font/press_start_2p"
            android:layout_marginBottom="12dp"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress" />

        <!-- PASSWORD -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:padding="8dp"
            android:textSize="10sp"
            android:textColor="@color/text_dark"
            android:fontFamily="@font/press_start_2p"
            android:layout_marginBottom="12dp"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <!-- CONFIRM PASSWORD -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:padding="8dp"
            android:textSize="10sp"
            android:textColor="@color/text_dark"
            android:fontFamily="@font/press_start_2p"
            android:layout_marginBottom="12dp"
            android:hint="@string/confirm_password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/sign_up"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="@font/press_start_2p"
            android:background="@drawable/bg_btn_signup"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or_sign_up_using"
            android:textSize="8sp"
            android:textColor="@color/text_muted"
            android:fontFamily="@font/press_start_2p"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivGoogleSignup"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_menu_search"
                android:padding="10dp"
                android:background="@drawable/bg_stone_tablet"
                android:contentDescription="@string/google"
                android:tint="#EA4335" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLoginHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_account"
            android:textSize="8sp"
            android:gravity="center"
            android:textColor="@color/text_dark"
            android:fontFamily="@font/press_start_2p"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
