<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_cave"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- TOP BAR -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/press_start_2p"
            android:text="TRANSACTIONS"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="32dp">

            <!-- INCOME SECTION HEADER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/press_start_2p"
                android:text="INCOME"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3">

                <!-- Baon (Income) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageButton
                        android:id="@+id/btnCategoryBaon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_panel"
                        android:src="@android:drawable/ic_input_add"
                        app:tint="@color/hp_green"
                        android:contentDescription="BAON" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/press_start_2p"
                        android:text="BAON"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </GridLayout>

            <!-- EXPENSE SECTION HEADER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/press_start_2p"
                android:text="EXPENSES"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1" />

            <!-- CATEGORY GRID -->
            <GridLayout
                android:id="@+id/categoryGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3">

                <!-- Food -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageButton
                        android:id="@+id/btnCategoryFood"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_panel"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:contentDescription="@string/category_food" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/press_start_2p"
                        android:text="@string/category_food"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Transport -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageButton
                        android:id="@+id/btnCategoryTravel"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_panel"
                        android:src="@android:drawable/ic_menu_directions"
                        android:contentDescription="@string/category_travel" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/press_start_2p"
                        android:text="@string/category_travel"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Fun -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageButton
                        android:id="@+id/btnCategoryFun"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_panel"
                        android:src="@android:drawable/btn_star_big_on"
                        android:contentDescription="@string/category_fun" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/press_start_2p"
                        android:text="@string/category_fun"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Health -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageButton
                        android:id="@+id/btnCategoryHealth"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_panel"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:contentDescription="@string/category_health" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/press_start_2p"
                        android:text="@string/category_health"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Study -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageButton
                        android:id="@+id/btnCategoryStudy"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_panel"
                        android:src="@android:drawable/ic_menu_edit"
                        android:contentDescription="@string/category_edu" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/press_start_2p"
                        android:text="@string/category_edu"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Shop -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageButton
                        android:id="@+id/btnCategoryShop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_panel"
                        android:src="@android:drawable/ic_menu_view"
                        android:contentDescription="@string/category_shop" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/press_start_2p"
                        android:text="@string/category_shop"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
